{
  "compilerOptions": {
    "target": "ES5",
    "module": "AMD",
    "lib": [
      "ES6",
      "DOM"
    ],
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outFile": "/home/corelab/Desktop/IoT Project/Cloud-IoT/resources/public/js/client.js",
    "rootDir": "src",
    "resolveJsonModule": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "include": [
    "server/src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}